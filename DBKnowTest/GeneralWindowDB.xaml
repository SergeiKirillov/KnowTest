<Window x:Class="DBKnowTest.GeneralWindowDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBKnowTest"
        mc:Ignorable="d"
        Title="Работа с базой данных программы проверки знаний..." Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Grid Margin="0 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="1.4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="2" Margin="2 0 2 0" Text="" Width="500"/>
                <Button Grid.Row="0" Grid.Column="0" Margin="2 0 2 0" Content="Создание БД" Width="100" x:Name="btnCreateDB" Click="btnCreateDB_Click"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="2 0 2 0" Content="Открытие БД" Width="100" x:Name="btnOpenDB" Click="btnOpenDB_Click"/>
            </Grid>
            
        </StackPanel>
    </Grid>
</Window>
